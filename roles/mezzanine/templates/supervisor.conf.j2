[program:gunicorn_{{ mezzanine_proj_name }}]
command={{ mezzanine_venv_path }}/bin/gunicorn -c gunicorn.conf.py -p gunicorn.pid {{ mezzanine_proj_name }}.wsgi:application
directory={{ mezzanine_proj_path }}
user={{ mezzanine_user }}
autostart=true
stdout_logfile={{ mezzanine_proj_logs }}/{{ mezzanine_proj_name }}_supervisor
autorestart=true
redirect_stderr=true
environment=LANG="{{ locale }}",LC_ALL="{{ locale }}",LC_LANG="{{ locale }}"
