[program:gunicorn_{{ proj_name }}]
command={{ venv_path }}/bin/gunicorn -c gunicorn.conf.py -p gunicorn.pid {{ proj_name }}.wsgi:application
directory={{ proj_path }}
user={{ user }}
autostart=true
stdout_logfile={{ proj_logs }}/{{ proj_name }}_supervisor
autorestart=true
redirect_stderr=true
environment=LANG="{{ locale }}",LC_ALL="{{ locale }}",LC_LANG="{{ locale }}"
